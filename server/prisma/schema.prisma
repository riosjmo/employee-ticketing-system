generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -----------------
// Ticket model (now related to User)
// -----------------
model Ticket {
  id          String   @id @default(uuid())
  title       String
  description String
  status      String   @default("open")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  ownerId     String?   // optional owner
  owner       User?     @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  files       File[]
}

// -----------------
// Auth & media models
// -----------------
model User {
  id           String          @id @default(uuid())
  email        String          @unique
  passwordHash String
  role         String          @default("user")
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  refreshTokens RefreshToken[]
  files         File[]
  jobs          VideoJob[]
  videos        Video[]
  tickets       Ticket[]        // user owns many tickets
}

model RefreshToken {
  id        String   @id @default(uuid())
  tokenHash String
  createdAt DateTime @default(now())
  revoked   Boolean  @default(false)

  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model File {
  id        String   @id @default(uuid())
  url       String
  key       String
  mimetype  String
  size      Int
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  ticketId  String?
  ticket    Ticket?  @relation(fields: [ticketId], references: [id])
  createdAt DateTime @default(now())
}

model VideoJob {
  id        String    @id @default(uuid())
  prompt    String
  status    String    @default("queued")
  createdAt DateTime  @default(now())

  // Relations
  user      User      @relation(fields: [userId], references: [id])
  userId    String

  video     Video?
}

model Video {
  id        String     @id @default(uuid())
  url       String
  duration  Int?
  createdAt DateTime   @default(now())

  // Relations
  job       VideoJob   @relation(fields: [jobId], references: [id])
  jobId     String     @unique   // because 1 job â†’ 1 video (one-to-one)

  user      User       @relation(fields: [userId], references: [id])
  userId    String
}
